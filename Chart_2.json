{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple bar chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/andreacorreaj/andreacorreaj.github.io/main/Schools_data.csv"
  },
  "resolve":{"scale":{"y": "independent"}},
  "layer": [
    {
      "mark": {"type":"bar",
      "color":"#2680b4"},
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {"field": "Number of students in private schools", "type": "quantitative"}
      }
    },
     {
      "mark": {"type":"line",
      "color":"#c01b1b"},
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {"field": "% of total students", "type": "quantitative"}
      }
     }
  ]
}
